####################
#
# Example Job for HTCondor
#
####################


#---------------------------------------------
# Name your batch so it's easy to distinguish in the q.
JobBatchName = "JM_BTMScript"

# --------------------------------------------
# Executable and its arguments
executable    = matlab-job.sh
arguments     = $(process)

# ---------------------------------------------------
# Universe (vanilla, docker)
universe         = vanilla

# -------------------------------------------------
# Event, out and error logs
log    = BtmTestLogs/log.p$(process)
output = BtmTestLogs/out.p$(process)
error  = BtmTestLogs/error.p$(process)

# -----------------------------------
# File Transfer, Input, Output
should_transfer_files = YES
transfer_input_files = CondorScript.m
transfer_output_files = results
when_to_transfer_output = ON_EXIT_OR_EVICT

environment = "mount=$ENV(PWD)"
        
# --------------------------------------
# Resources
#request_GPUs     = 1
#+GPUMem          = 4000
request_CPUs     = 2
request_memory = 16G

#This job will complete in less than 1 hour
+JobRunTime = 1

#This job can checkpoint
+CanCheckpoint = true

# -----------------------------------
# Queue commands
queue 1
